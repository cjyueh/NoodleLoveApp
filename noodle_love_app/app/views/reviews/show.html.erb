<h1>This will be a page for a review of a dish.</h1>

<%= link_to "BACK TO DISH", dish_path(@dish), :class => 'btn btn-primary' %>

<h2><%= @dish.dish_name %> at <%= @review.restaurant_name %></h2>
<img src="<%= @review.dish_image %>" />
<p><%= @review.dish_rating %></p>
<p><%= @review.dish_review %></p>

<%#= if logged in user is the author of a review, show edit or delete button -%>
<% if current_user && current_user.id == @review.user_id %>
	<%= link_to "EDIT REVIEW", edit_review_path(@review), :class => 'btn btn-primary' %>
	<%= button_to "DELETE REVIEW", @review, :method => :delete %>
<% end %>