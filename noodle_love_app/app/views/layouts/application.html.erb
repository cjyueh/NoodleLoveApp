					</button>
					<h1 class="navbar-brand" id="noodle-love"><%= link_to "noodlelove", root_path %></h1>
				</div>
				<div class="nav navbar-nav navbar-right">
					<% if current_user %>
						<%#= show current user link to profile %>
						<%= link_to "#{current_user.first_name}", user_path(current_user), :class => 'btn btn-primary' %>
						<%= link_to "SIGN OUT", sign_out_path, method: :delete, :class => 'btn btn-primary' %>
					<% else %>
						<%= link_to "SIGN IN", sign_in_path, :class => 'btn btn-primary' %>
						<!-- <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target=".sign-in">SIGN IN</button> -->
						<%= link_to "CREATE ACCOUNT", new_user_path, :class => 'btn btn-primary' %>
					<% end %>
				</div>
			</div>
		</nav>
	</header>

